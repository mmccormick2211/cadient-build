{
  "variables": {
    "mirror": "http://mirrors.kernel.org/centos",
    "mirror_directory": "7.6.1810/isos/x86_64",
    "iso_name": "CentOS-7-x86_64-DVD-1810.iso",
    "iso_checksum": "6d44331cc4f6c506c7bbe9feb8468fad6c51a88ca1393ca6b8b486ea04bec3c1",
    "iso_checksum_type": "sha256",
    "template": "centos-7.6-x86_64",

    "headless": "false",
    "box_basename": "centos-7.6",
    "build_timestamp": "{{isotime \"20060102150405\"}}",

    "cpus": "1",
    "memory": "1024",
    "disk_size": "65536",

    "ks_path": "7/ks.cfg"
  },

  "builders": [
    { "type": "vmware-iso",
      "name": "{{user `box_basename`}}",
      "communicator": "ssh",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "ssh_port": 22,
        "ssh_timeout": "10000s",

      "iso_url":            "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "iso_checksum":       "{{user `iso_checksum`}}",
      "iso_checksum_type":  "{{user `iso_checksum_type`}}",
      "output_directory":   "../../builds/packer-{{user `template`}}-vmware",

      "vm_name":  "packer-{{user `template`}}-vmware",
      "headless": "{{user `headless`}}",

      "guest_os_type":  "centos64Guest",
      "cpus":           "{{ user `cpus` }}",
      "cores":          1,
      "memory":         "{{ user `memory` }}",
      "disk_size":      "{{user `disk_size`}}",
      "disk_type_id":   "4",
      "parallel": "NONE",
      "serial": "NONE",
      "sound": false,
      "usb": false,

      "boot_wait":          "10s",
      "http_directory":     "http",
      "boot_command":       [ "<up><wait><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ks_path`}}<enter><wait>" ],
      "shutdown_command":   "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "vmx_remove_ethernet_interfaces": false
    }
  ],

  "provisioners": [
    { "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -S env {{ .Vars }} {{ .Path }}",
      "inline": [ "# https://community.spiceworks.com/how_to/151558-create-a-rhel-centos-6-7-template-for-vmware-vsphere",
                  "# Step 1: Stop the Logging Services",
                    "/sbin/service rsyslog stop",
                    "/sbin/service auditd stop",
                  "# Step 2: Remove any old kernels",
                    "package-cleanup --oldkernels --count=1",
                  "# Step 3: Clean out Yum",
                    "yum clean all",
                  "# Step 4: Force the logs to rotate and remove old logs we don’t need",
                    "/usr/sbin/logrotate –f /etc/logrotate.conf",
                    "/bin/rm –f /var/log/*-???????? /var/log/*.gz",
                    "/bin/rm -f /var/log/dmesg.old",
                    "/bin/rm -rf /var/log/anaconda",
                  "# Step 5: Truncate the audit logs (and other logs we want to keep placeholders for)",
                    "/bin/cat /dev/null > /var/log/audit/audit.log",
                    "/bin/cat /dev/null > /var/log/wtmp",
                    "/bin/cat /dev/null > /var/log/lastlog",
                    "/bin/cat /dev/null > /var/log/grubby",
                  "Step 6: Remove the udev persistent device rules",
                    "/bin/rm -f /etc/udev/rules.d/70*",
                  "# Step 7: Remove the traces of the template MAC address and UUIDs",
                    "/bin/sed -i ‘/^(HWADDR|UUID)=/d’ /etc/sysconfig/network-scripts/ifcfg-e*",
                  "# Step 8: Clean /tmp out",
                    "/bin/rm –rf /tmp/*",
                    "/bin/rm –rf /var/tmp/*",
                  "# Step 9: Remove the SSH host keys",
                    "/bin/rm –f /etc/ssh/*key*",
                  "# Step 10: Remove the root user’s shell history",
                    "/bin/rm -f ~root/.bash_history",
                    "unset HISTFILE",
                  "# Step 11: Remove the root user’s SSH history and other stuff",
                    "/bin/rm -rf ~root/.ssh/",
                    "/bin/rm -f ~root/anaconda-ks.cfg",
                  "# Step 12: Clear bash history and shutdown for template creation",
                    "history –c",
                    "sys-unconfig"
                ],
      "pause_after": "2m"
    }

  ]
}
